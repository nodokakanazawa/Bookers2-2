<div class="container">
  <div class="row">
    <div class="col-md-4">
        <%= render 'list1', user: @user %>
        <%= render 'books/list', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
        <table class="table">
            <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            </thead>
            <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title ,book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>


