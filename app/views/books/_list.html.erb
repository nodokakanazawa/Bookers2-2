<div class="container">
  
    <div class="row">
      <h1>New book</h1>
    </div>
    <div class="row">
      <%= form_with model: book do |f| %>
        <h4>Title</h4>
        <br>
        <%= f.text_field :title %>
    </div>
    <div class="row">
        <h4>Opinion</h4>
        <%= f.text_field :body %>
    </div>
    <br>
    <div class="row">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
      <% end %>
      
</div>

