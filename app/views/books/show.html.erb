<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/list1', user: @user %>
      <%= render 'list', book: @book %>
    </div>
    <div class="col-lg-8">
      <h1>Books details</h1>
      <table>
        <tr>
          <td><%=image_tag @user.get_profile_image(100,100) %></td>
          <td><%= @user.name %></td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <td><% link_to"edit",edit_book_path(@book.id) %></td>
          <% if @book.user == current_user %>
          <td><%= link_to "Edit",edit_book_path(@book) %></td>
          <td><%= link_to "Destroy",destroy_book_path(@book.id), method: :delete,data: {confirm: "Are you sure?"} %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>

