<div class="container center">
  <div class="row">
    <h1>Editing Book</h1>
  </div>
  <div class="row">
    <%= form_with model: @book do |book| %>
    <h4>Title</h4>
    <%= book.text_field :title %>

    <h4>Body</h4>
    <%= book.text_area :body %>
  <br>
    <%= book.submit 'Update Book' %>
  </div>

  <div class="row">
    <%= link_to "show" , book_path(@book) %>
    <%= link_to "back" , books_path %>
    <% end %>
  </div>

</div>